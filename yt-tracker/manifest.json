{
    "manifest_version": 2,
    "name": "YT Tracker",
    "version": "0.1",

    "description": "Tracks your time on YouTube per video.",

    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["jquery-3.6.0.min.js", "plugin.js"]
        }
    ],

    "permissions": ["storage"],

    "browser_action": {
    "browser_style": true,
    "default_popup": "status.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png"
    }
  }

}

