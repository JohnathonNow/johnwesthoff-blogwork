{
    "manifest_version": 2,
    "name": "YT Tracker",
    "version": "0.1",

    "description": "Tracks your time on YouTube per video.",

    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["plugin.js"]
        }
    ],

    "permissions": ["storage"],

    "options_ui": {
        "page": "options.html"
    }
}

